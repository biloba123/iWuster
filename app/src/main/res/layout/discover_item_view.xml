<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/sub_medium_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/iv_ic"
        android:layout_width="@dimen/ic_discover_size"
        android:layout_height="@dimen/ic_discover_size"
        tools:srcCompat="@drawable/ic_class_schedule"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sub_medium_text"
        android:layout_marginTop="@dimen/sub_small_spacing"
        android:textColor="@color/text_default"
        tools:text="@string/calss_schedule"/>
</LinearLayout>